{
    "name": "Kafka Cohort",
    "dockerComposeFile": "../docker-compose.yaml",
    "service": "app",
    "workspaceFolder": "/workspaces/kafka-tutorial",
    "hostRequirements": {
        "cpus": 4
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "python3 -m pip install --upgrade pip && sudo apt update && sudo apt install -y python3-distutils && python3 -m pip install -r requirements.txt",
    "postCreateCommand": "git config --global --add safe.directory /workspaces/kafka-tutorial && bash /workspaces/kafka-tutorial/.devcontainer/post-create.sh",
    "customizations": {
        "codespaces": {
            "openFiles": []
        },
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter"
            ]
        }
    }
}